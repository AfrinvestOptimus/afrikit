{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "types": ["nativewind/types"],
    "jsx": "react-jsx",
    "module": "CommonJS",
    "target": "ES6",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": "./"
  },
  "paths": {
    "@shared/*": ["node_modules/afrikit-shared/dist/*"]
  },

  "include": [
    "./components/**/*",
    "./molecules/**/*",
    "./atoms/**/*",
    "./organisms/**/*",
    "./types/**/*",
    "./utilities/**/*",
    "./global.css",
    "./index.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "./App.tsx"]
}
