{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "types": [
      "nativewind/types"
    ],
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2020",
    "lib": [
      "ES2016",
      "DOM"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": [
        "packages/mobile/components/*"
      ],
      "@molecules/*": [
        "packages/mobile/molecules/*"
      ],
      "@atoms/*": [
        "packages/mobile/atoms/*"
      ],
      "@shared/*": [
        "packages/shared/*"
      ]
    }
  },
  "include": [
    "./components/**/*",
    "./molecules/**/*",
    "./atoms/**/*",
    "./organisms/**/*",
    "./types/**/*",
    "./utilities/**/*",
    "./global.css",
    "./index.ts",
    "nativewind-env.d.ts",
    "tailwind-plugin.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}
