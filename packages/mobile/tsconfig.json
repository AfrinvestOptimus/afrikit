{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "resolveJsonModule": true,
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "types": ["nativewind/types"],
    "jsx": "react-jsx",
    "module": "CommonJS",
    "target": "ES6",
    "lib": ["ES2016", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": "./"
  },
  "include": [
    "./components/**/*",
    "./molecules/**/*",
    "./atoms/**/*",
    "./organisms/**/*",
    "./types/**/*",
    "./utilities/**/*",
    "./global.css",
    "./index.ts"
  ],
  "exclude": ["node_modules"]
}