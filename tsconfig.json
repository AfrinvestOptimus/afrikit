{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "packages",
    "moduleResolution": "node",
    "target": "ES5",
    "module": "CommonJS",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "paths" : {
      "@components/*": ["./packages/mobile/components/*"],
      "@molecules/*": ["./packages/mobile/molecules/*"],
      "@atoms/*": ["./packages/mobile/atoms/*"],
      "@shared/*": ["./packages/shared/*"],
      "@web/*": ["./packages/web/*"],
    }
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
