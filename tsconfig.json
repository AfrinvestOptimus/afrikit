{
  "compilerOptions": {
    "target": "ES6", // Specifies the ECMAScript target version: 'ES6' (ES2015)
    "module": "ESNext", // Use the latest ECMAScript module syntax
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Include type definitions for DOM, DOM.Iterable, and ESNext
    "jsx": "react-jsx", // Support JSX in .tsx files with React 17+ JSX transform
    "moduleResolution": "node", // Use Node.js-style module resolution
    "resolveJsonModule": true, // Allow importing .json files
    "isolatedModules": true, // Ensure each file can be safely transpiled without relying on other imports
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
    "strict": true, // Enable all strict type checking options
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
    "noFallthroughCasesInSwitch": true, // Report errors for fallthrough cases in switch statements
    "noEmit": true, // Do not emit outputs (useful when using Babel for transpilation)
    "skipLibCheck": true, // Skip type checking of declaration files
    "allowJs": true, // Allow JavaScript files to be compiled
    "declaration": true, // Generate corresponding .d.ts files
    "declarationMap": true, // Generate source maps for .d.ts files
    "sourceMap": true, // Generate source maps for emitted JavaScript files
    "baseUrl": ".", // Base directory to resolve non-relative module names
    "rootDir": "packages", // Specify the root directory of input files
    "outDir": "./dist", // Redirect output structure to this directory
    "paths": { // Specify path mapping for imports
      "@components/*": ["packages/mobile/components/*"],
      "@molecules/*": ["packages/mobile/molecules/*"],
      "@atoms/*": ["packages/mobile/atoms/*"],
      "@shared/*": ["packages/shared/*"],
      "@web/*": ["packages/web/*"]
    },
    "types": ["react", "react-native", "node"] // Type declaration files to be included in compilation
  },
  "include": [
    "packages/**/*" // Include all files in the packages directory and its subdirectories
  ],
  "exclude": [
    "node_modules", // Exclude the node_modules directory
    "**/node_modules/*", // Exclude all node_modules directories in any subdirectory
    "dist", // Exclude the dist directory
    "**/*.test.ts", // Exclude all .test.ts files
    "**/*.spec.ts" // Exclude all .spec.ts files
  ]
}
