{
  "name": "afrikit",
  "version": "0.0.8",
  "private": true,
  "description": "Afrinvest Design System",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/afrikit-shared",
      "**/afrikit-shared/**"
    ]
  },
  "keywords": [
    "afrinvest",
    "design"
  ],
  "author": "afrinvest",
  "license": "MIT",
  "peerDependencies": {
    "tailwindcss": "^3.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "react-hook-form": "^7.53.0",
    "globals": "^15.9.0",
    "husky": "^8.0.0",
    "lerna": "^8.1.8",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "tsc-alias": "^1.6.8",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "lerna run start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . ",
    "lint:fix": "eslint . --fix --max-warnings=100",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AfrinvestOptimus/afrikit.git"
  },
  "bugs": {
    "url": "https://github.com/AfrinvestOptimus/afrikit/issues"
  },
  "homepage": "https://github.com/AfrinvestOptimus/afrikit#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint . --fix --max-warnings=100"
    ]
  },
  "packageManager": "yarn@1.22.19+sha1.4ba7fc5c6e704fce2066ecbfb0b0d8976fe62447"
}
